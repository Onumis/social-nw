<%= form_for @profile, role: 'form' do |f| %>
  <%= f.fields_for :user do |uf| %>
    <div class="form-group">
      <%= uf.label :email, "Email Address" %>
      <%= uf.email_field :email, required: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= uf.label :name, "Name" %>
      <%= uf.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= uf.select :gender, User.gender.options, {include_blank: true}, {class: 'form-control'} %>
    </div>
  <% end %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>